<div id="loader" class="fade">
	<img src="/img/loader-white.svg" alt="">
</div>

<div id="about" class="fade hidden">
	<div class="msg">
		<div class="text">Synomap is ...</div>
		<div class="dismiss">
			<img src="/img/dismiss.svg" alt="">
		</div>
	</div>
</div>

<div id="report" class="fade hidden">
	<div id="report-msg" class="msg">
		<div id="sorry" class="sorry fade hidden display-none">We couldn't find a path.  Sorry about that!</div>
		<div id="report-txt" class="txt"></div>
		<div id="report-btn" class="btn"></div>
		<div id="report-dismiss" class="dismiss">
			<img src="/img/dismiss.svg" alt="">
		</div>
	</div>
</div>

<div id="share-menu" class="fade fade-out">
	<div class="msg">
		<p>Share Synomap</p>
		<p id="share-dek"></p>
		<div class="share-item" id="link">Copy Link</div>
		<div class="share-item" id="email">Email</div>
		<div class="share-item" id="fb">Facebook</div>
		<div class="share-item" id="tw">Twitter</div>
		<div class="dismiss">
			<img src="/img/dismiss.svg" alt="">
		</div>
	</div>
</div>

<div id="header">
	<div id="title"><a href="/">Word Bridge</a></div>
	<div id="about-btn">about</div>
	<div id="share">Share</div>
	<div id="plus" class="fade hidden">+</div>
</div>

<div id="search" class="fade hidden display-none">
	<input type="text" id="start-word" name="s" class="query" placeholder="word 1">
	<input type="text" id="end-word" name="e" class="query" placeholder="word 2">
	<input type="submit" value="bridge" id="bridge">
	<div class="ldr" id="ldr">
		<img src="/img/loader-black.svg" alt="">
	</div>
</div>

<div id="chains"></div>

<div id="chain-nav">
	<div id="inner-chain-nav">
		<div id="prev-chain" class="chain-btn"> < </div>
		<div id="dots"></div>
		<div id="next-chain" class="chain-btn"> > </div>
	</div>
</div>


<script type="text/javascript">
	B = {}; // need B for helpers
</script>
<script src="/js/helpers.js"></script>
<script src='/js/search.js' type='text/javascript'></script>
<script src='/js/def.js' type='text/javascript'></script>
<script src='/js/mod.js' type='text/javascript'></script>
<script src='/js/new.js' type='text/javascript'></script>
<script type="text/javascript">
	window.addEventListener('load', function() {
		if ("{{errmsg}}") 
			B.report("{{errmsg}}", 'Okay');	
		if ("{{data}}") {
			B.makeChain({{{json data}}});
			document.getElementById('search').style.display = 'none';
			document.getElementById('share-dek').textContent = `${B.startWord} -> ${B.endWord}`;
			document.getElementById('plus').classList.replace('hidden', 'visible');
		} else {
			B.fade(document.getElementById('search'), 'in');
		}
	});
</script>


