<!-- search  -->
<div class="sharemenu">
	<div class="msg">
		<p>Share Synomap</p>
		<p>{{data.start}} ... {{data.end}}</p>
		<div class="sh email">Email</div>
		<div class="sh fb">Facebook</div>
		<div class="sh tw">Twitter</div>
		<div class="dismiss">
			<img src="/img/dismiss.svg" alt="">
		</div>
	</div>
</div>

<div id="newpathloader">
	<img src="/img/loader.svg" alt="">
</div>

<div id="main">
	<header>
		<div class="home">
			<img src="/img/arrow_stop.svg">
		</div>
		<div class="plus">
			<svg xmlns="http://www.w3.org/2000/svg" width="53" height="50">
				<path d="M0 0h53v50H0V0z" fill="none" id="plusbkg"/>
				<path fill="none" stroke="#070707" stroke-width="3" d="M17.312 25.005h18.377m-9.194 9.183V15.812"/>
			</svg>
		</div>
		<div class="share">
			<img src="/img/share.svg">
		</div>
	</header>
	
	<div id="report">
		<div class="msg">
			<div class="text"></div>
			<div class="btn"></div>
			<div class="dismiss">
				<img src="/img/dismiss.svg" alt="">
			</div>
		</div>
	</div>

	<div id="tooltips">
		<div id="count">1/3</div>
		<div id="tip_one">Swipe words to play with the bridge.</div>
		<div id="tip_two">Tap words to see their definition.</div>
		<div id="tip_three">Make new paths with your bridge words.</div>
		<div id="next_btn">NEXT</div>
	</div>

	<div class="path-dots slidedown pathdotcontainer">
		<div class="dots">
			<div class="path-dot" id="p-0"></div>
		</div>
	</div>

	<div id="paths">

		<div class="path" id="path-0">
			<div class="nodes">
				{{#each data.chain}}
					{{#if @first}}
						<div class="node-wrap">{{this.word}}</div>
					{{else if @last}}
						<div class="node-wrap">{{this.word}}</div>
					{{else}}
						<div class="node-wrap">
							{{this.index}}
							<div class="node" data-index={{@index}} data-syndex={{this.syndex}}>
								{{this.word}}
							</div>
						</div>
					{{/if}}
				{{/each}}
			</div>
		</div>
	</div>
</div>
<script src='/js/search_helpers.js' type='text/javascript'></script>
<script src='/js/jquery.doubletap.js', type='text/javascript'></script>
<script type='text/javascript'>
	window.data = {{{json data}}};
	window.tooltips = {{{json tips}}};
	/*console.log(data);*/
</script>
<script src='/js/search.js' type='text/javascript'></script>
<script src='/js/def.js' type='text/javascript'></script>
<script src='/js/mod.js' type='text/javascript'></script>
<script src='/js/new.js' type='text/javascript'></script>
